<?xml version="1.0"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="false">
  
  
  	

	<!-- 다음 파라미터 값은 ServletContext의 getInitParameter()를 호출하면 얻을 수 있다. -->
	<context-param>
		<param-name>mybatisConfig</param-name>
		<param-value>java63/servlets/test04/dao/mybatis-config.xml</param-value>
	</context-param>

	<!-- 리스너 등록하기 -->
	<listener>
	<listener-class>java63.servlets.test04.ContextLoaderListener</listener-class>
	</listener>
	
	<listener>
	<listener-class>java63.servlets.test04.LogFilter</listener-class>
	</listener>
	
	<!-- 필터 선언 -->
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>java63.servlets.test04.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>charset</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	<filter>
		<filter-name>LogFilter</filter-name>
		<filter-class>java63.servlets.test04.LogFilter</filter-class>
	</filter>
	
	<!-- 필터를 실행해할 때를 지정 -->
	
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>LogFilter</filter-name>
		<url-pattern>/test04/*</url-pattern>
	</filter-mapping>
	
  <!-- 서블릿 선언 
  servlet-name => 서블릿 별명
  servlet-class => javax.servlet.Servlet 인터페이스를 구현한 클래스명
  				=> 패키지명 + 클래스
  -->
	
